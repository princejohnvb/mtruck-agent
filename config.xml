<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.mtruck.agent-test"
        versionCode = "1"
        version     = "1.0.0" >

    <!-- versionCode is Android only -->
    <!-- version is in major.minor.patch format -->
    <name>mTruck-Agent</name>

    <description>
        An example for phonegap build app which wont show up in the playstore.
    </description>

    <author email="pjohn@valuebound.com">
        Prince John
    </author>

    <access origin="*" />

    <!--<platform name = "ios"/>-->
    <platform name="android"/>
    <!--<platform name="winphone"/>-->


    <!--<splash platform="android" qualifier="port-hdpi" src="splash/android/splash.png" />-->
    <!--<splash src="splash.png"/>-->

    <preference name = "android-minSdkVersion" value="22" />
    <preference name = "android-maxSdkVersion" value="26" />
    <preference name = "android-targetSdkVersion" value="22" />

    <preference name="deployment-target" value="7.0" />

    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="KeepRunning" value="false" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="android-build-tool" value="gradle" />

    <plugin name="cordova-plugin-x-socialsharing" source="npm" />
    <plugin name="cordova-plugin-webintent2" source="npm"/>
    <plugin name="cordova-plugin-admobpro" source="npm"/>
    <plugin name="cordova-plugin-network-information" source="npm"/>
    <plugin name="cordova-plugin-x-toast" source="npm"/>
    <plugin name="checkinternet" source="npm"/>
    <plugin name="cordova-plugin-inappbrowser-wkwebview" source="npm"/>
    <plugin name="cordova-cookie-sharing" source="npm"/>
    <plugin name="cordova-plugin-file-chooser" source="npm"/>
    <plugin name="cordova-plugin-whitelist" source="npm"/>
    <plugin name="cordova-plugin-splashscreen" source="npm" />


</widget>